<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abreu.roby.app.Login"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/editText_Sen"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginEnd="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="173dp"
        android:background="@drawable/edit_text_style"
        android:ems="10"
        android:hint=" Senha"
        android:inputType="textPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/button_entrar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/button_style"
        android:text="Entrar"
        android:onClick="validarUsuario"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="@+id/editText_Sen"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_Sen"
        app:layout_constraintLeft_toLeftOf="@+id/editText_Sen" />

    <Button
        android:id="@+id/button_esquecerSenha"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/button_shape"
        android:text="Esqueci a senha"
        android:onClick="teste"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button_novaConta"
        app:layout_constraintRight_toRightOf="@+id/button_novaConta"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/button_novaConta" />

    <Button
        android:id="@+id/button_novaConta"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:background="@drawable/button_shape1"
        android:text="Criar nova conta"
        android:onClick="criarConta"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="74dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editText_Lin"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="  Login"
        android:background="@drawable/edit_text_style"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/editText_Sen"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="0dp" />
</android.support.constraint.ConstraintLayout>
