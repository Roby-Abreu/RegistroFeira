<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/button_NovoProduto"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/button_style"
        android:text="Novo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_CadastrarCat"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape1"
        android:text="Cadastrar \n Categoria"
        android:layout_alignTop="@+id/button_NovoProduto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

    <ListView
        android:id="@+id/Lista_produtos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_NovoProduto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>